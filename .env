# -------- Application image/build --------
APP_IMAGE_NAME=currency-rates-service
APP_IMAGE_TAG=latest
APP_CONTAINER_NAME=currency-rates-service
APP_BUILD_CONTEXT=.
APP_DOCKERFILE=Dockerfile

# Application port (container & host mapping)
APP_PORT=8081

# -------- Database (PostgreSQL) --------
POSTGRES_IMAGE=postgres
POSTGRES_TAG=latest
POSTGRES_CONTAINER_NAME=currency-rates-postgres

# Database credentials & name
POSTGRES_DB=currency_rates
POSTGRES_USER=currency_user
POSTGRES_PASSWORD=currency_pass_123

# Ports
POSTGRES_PORT=5432             # host port
POSTGRES_INTERNAL_PORT=5432    # container/internal port

# Healthcheck tuning
POSTGRES_HEALTHCHECK_INTERVAL=5s
POSTGRES_HEALTHCHECK_TIMEOUT=3s
POSTGRES_HEALTHCHECK_RETRIES=10

# -------- Mocks service --------
MOCKS_IMAGE=docker.io/illenko/currencies-mocks
MOCKS_TAG=latest
MOCKS_CONTAINER_NAME=currencies-mocks

# Ports
MOCKS_PORT=8080                # host port
MOCKS_INTERNAL_PORT=8080       # container/internal port

# API paths & auth
APP_MOCKS_FIAT_PATH=/fiat-currency-rates
APP_MOCKS_CRYPTO_PATH=/crypto-currency-rates
APP_MOCKS_API_KEY_HEADER=X-API-KEY
APP_MOCKS_API_KEY=secret-key

# -------- HTTP client tuning --------
APP_HTTP_TIMEOUT_SECONDS=3
APP_HTTP_RETRY_MAX_ATTEMPTS=1
APP_HTTP_RETRY_BACKOFF_MS=200
